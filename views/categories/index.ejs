<%- include('../layouts/header') %>

<div class="container">
  <h1>All Categories</h1>
  <p class="subtitle">Track. Organize. Optimize your car parts stock.</p>

  <% if (categories.length > 0) { %>
    <ul class="list">
      <% categories.forEach(category => { %>
        <li class="list-item">
          <strong><a href="/categories/<%= category.id %>"><%= category.name %></a></strong>
          <span class="badge"><%= category.parts.length %> part(s)</span>
          <div class="actions">
            <a href="/categories/<%= category.id %>/showCategorie" class="btn">Edit</a>
            <a href="/categories/<%= category.id %>/delete" class="btn danger">Delete</a>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p class="empty">No categories found. Please add some.</p>
  <% } %>

  <a href="/categories/new" class="btn primary">Add New Category</a><br>
  <a href="/" class="btn">Back Home</a>
</div>

<%- include('../layouts/footer') %>

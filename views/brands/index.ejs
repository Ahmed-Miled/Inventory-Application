<%- include('../layouts/header') %>

<div class="container">
  <h1>Brands</h1>

  <% if (brands.length > 0) { %>
    <div class="grid">
      <% brands.forEach(brand => { %>
        <div class="card">
          <a href="/brands/<%= brand.id %>" class="brand-name"><%= brand.name %></a>
          <form action="/brands/<%= brand.id %>" method="POST" class="inline-form">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="empty">No brands found.</p>
  <% } %>

  <div class="action-container">
    <a href="/brands/new" class="btn btn-primary">Add New Brand</a>
    <a href="/" class="btn btn-secondary">Back Home</a>
  </div>
</div>

<%- include('../layouts/footer') %>

<%- include('../layouts/header') %>

<div class="container">
  <h1>All Parts</h1>
  <p class="subtitle">Manage your car parts efficiently with our intuitive interface.</p>

  <% if (parts.length > 0) { %>
    <ul class="list">
      <% parts.forEach(part => { %>
        <li class="list-item">
          <div>
            <strong><a href="/parts/<%= part.id %>"><%= part.name %></a></strong> — 
            <%= part.quantity %> in stock — 
            <span class="badge"><%= part.price %> £</span> — 
            <span class="badge"><%= part.categoryName %></span>
          </div>
          <div class="actions">
            <a href="/parts/<%= part.id %>/edit" class="btn small">Edit</a>
            <a href="/parts/<%= part.id %>/delete" class="btn danger small">Delete</a>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p class="empty">No parts found.</p>
  <% } %>

  <a href="/parts/new" class="btn primary">Add New Part</a>
  <a href="/" class="btn">Back Home</a>
</div>

<%- include('../layouts/footer') %>
